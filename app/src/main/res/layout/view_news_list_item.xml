<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffffff">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_article_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#A3A8B4"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#272D39"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:textSize="18sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_article_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:lineSpacingExtra="1.4dp"
                android:ellipsize="end"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_article_bg"
                android:layout_width="0dp"
                android:scaleType="fitXY"
                android:layout_weight="0.5"
                android:background="@drawable/bg_news"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_height="100dp" />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>